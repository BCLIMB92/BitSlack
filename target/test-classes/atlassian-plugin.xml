<atlassian-plugin key="com.mycompany.bitbucket.is-admin-merge-check-tests" name="Bitbucket Server Examples - Repository Merge Checks" plugins-version="2">
    <plugin-info>
        <description>This is the com.mycompany.bitbucket:is-admin-merge-check plugin for Atlassian Bitbucket Server.</description>
        <version>1.0.0-SNAPSHOT</version>
        <vendor name="Example Company" url="http://www.example.com/" />
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="is-admin-merge-check"/>

    <repository-merge-check key="isAdmin" class="bean:isAdminMergeCheck" configurable="false"/>
    
</atlassian-plugin>